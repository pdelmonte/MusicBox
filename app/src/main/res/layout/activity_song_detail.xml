<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.bts.android.musicbox.SongDetailActivity">

    <TextView
        android:id="@+id/tv_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_song_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_song_country"
        android:layout_alignRight="@+id/tv_song_country"
        android:layout_below="@+id/tv_song_country"
        android:layout_marginTop="68dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_song_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_song_title"
        android:layout_alignRight="@+id/tv_song_title"
        android:layout_below="@+id/tv_song_title"
        android:layout_marginTop="25dp"
        android:text="TextView" />
</RelativeLayout>
